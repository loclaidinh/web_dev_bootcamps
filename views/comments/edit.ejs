<!--This is Edit Comment page-->

<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment to <%= campground.name %> </h1>
        <div style="width: 30%; margin: 30px auto;">
        <form method="POST" action="/campgrounds/<%= campground._id %>/comments/<%=comment._id%>?_method=PUT">
            <div class="form-group">
             <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]">
            </div>
            <div class="form-group">
             <button class="btn btn-default btn-lg btn-block btn-primary">Submit!</button>
            </div>
        </form>
            <a href="/campgrounds/">Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>
