<!--This is new Campground page-->

<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Create a new CampGround</h1>
        <div style="width: 30%; margin: 30px auto;">
        <form method="POST" action="/campgrounds">
            <div class="form-group">
             <input class="form-control" type="text" placeholder="Campground name" name="name">
            </div>
            <div class="form-group">
             <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
             <input class="form-control form-group" type="text" placeholder="Image" name="image">
            </div>
             <div class="form-group">
             <input class="form-control form-group" type="text" placeholder="Description" name="description">
            </div>
            <div class="form-group">
             <button class="btn btn-default btn-lg btn-block btn-primary">Submit!</button>
            </div>
        </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>
